<section
  class='max-w-7xl bg-white rounded-lg shadow-lg py-10 px-4 flex items-center justify-center'
>
  <div class='p-8 w-1/2'>
    <div class='flex items-center justify-between'>
      <div class='flex items-center'>
        <div class='ml-2'>
          <h2 class='text-2xl font-bold text-gray-800 inline-block'>
            {{user.firstName}}
            {{user.lastName}}
          </h2>
        </div>
      </div>
      <div
        class='bg-cyan-950 px-4 py-2 border-2 border-emerald-900 rounded-full text-center flex items-center justify-around'
      >
        <span class='text-white text-lg font-semibold'>{{user.balance}}
          Coins</span>
        <img src='/coin.png' alt='Coin' class='h-6 ml-2 inline' />
      </div>
    </div>
    <div class='mt-8'>
      <h3 class='text-xl font-semibold text-gray-800'>Account Information</h3>
      <div class='mt-4 grid grid-cols-1 md:grid-cols-2 gap-4'>
        <div>
          <label class='text-gray-600 text-sm'>First Name</label>
          <div
            class='mt-1 p-2 border border-gray-300 rounded-md'
          >{{user.firstName}}</div>
        </div>
        <div>
          <label class='text-gray-600 text-sm'>Last Name</label>
          <div
            class='mt-1 p-2 border border-gray-300 rounded-md'
          >{{user.lastName}}</div>
        </div>
        <div class='md:col-span-2'>
          <label class='text-gray-600 text-sm'>Email</label>
          <div
            class='mt-1 p-2 border border-gray-300 rounded-md'
          >{{user.email}}</div>
        </div>
        <div class='md:col-span-2'>
          <label class='text-gray-600 text-sm'>Username</label>
          <div
            class='mt-1 p-2 border border-gray-300 rounded-md'
          >{{user.username}}</div>
        </div>
      </div>
    </div>
  </div>
</section>