generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  username       String   @unique
  email          String   @unique
  firstName      String
  lastName       String
  role           Role
  hashedPassword String
  balance        Int      @default(0)
}

model Film {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  title       String
  description String
  director    String
  releaseYear Int
  genre       String[]
  price       Int
  duration    Int
  videoUrl    String
  imageUrl    String?
}
